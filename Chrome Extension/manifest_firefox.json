{
  "manifest_version": 2,
  "name": "Open in VLC / MPC-HC",
  "version": "1.2.1",
  "description": "Adds a right-click menu option to play audio & video URLs instantly in VLC or MPC-HC.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "storage",
    "notifications",
    "http://localhost/*"
  ],
  "content_scripts": [],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "open-in-vlc-mpchc@wiselook.net",
      "strict_min_version": "92.0"
    }
  }
}
